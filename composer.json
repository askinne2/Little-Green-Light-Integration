{
    "name": "upstate-international/integrate-lgl",
    "description": "Little Green Light API Integration for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Andrew Skinner",
            "email": "andrew@21adsmedia.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "psr/container": "^1.1|^2.0",
        "htmlburger/carbon-fields": "^3.5",
        "bdk/debug": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "UpstateInternational\\LGL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UpstateInternational\\LGL\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "scripts": {
        "dump-autoload": "composer dump-autoload -o",
        "refresh": [
            "composer dump-autoload -o",
            "echo 'Autoloader refreshed successfully!'"
        ],
        "dev-setup": [
            "composer install",
            "composer dump-autoload -o",
            "echo 'Development environment setup complete!'"
        ],
        "post-autoload-dump": [
            "echo 'Autoloader generated with optimizations enabled'"
        ]
    }
}
